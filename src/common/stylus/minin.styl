//解决....问题
nowwrap()
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
//解决移动端的下边框1像素问题
border-b-1px($color)
   position :relative
   &:after
      display block
      position absolute
      left 0
      bottom 0
      width 100%
      border-top: 1px solid $color
      content ' '
border-none()
    &:after
      display none
//解决移动端的上边框1像素问题
border-t-1px($color)
  position :relative
  &:before
    display block
    position absolute
    left 0
    top 0
    width 100%
    border-bottom: 1px solid $color
    content ' '
bg-img($url)
    background-image  url($url+'@2x.png')
    @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
      background-image url($url+'@3x.png')
